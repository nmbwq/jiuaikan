<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_login_bottom"
    >

    <ImageView
        android:id="@+id/iv_login_top"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_gravity="bottom|center"
        android:src="@mipmap/pic_loadpose1"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_guide_login_black"
        >

        <ImageView
            android:id="@+id/iv_common_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:src="@mipmap/ic_common_back_white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="93dp"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="22dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="160dp"
            >

            <EditText
                android:id="@+id/phone_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="手机号"
                android:inputType="number"
                android:maxLength="11"
                android:textColor="@color/white"
                android:textColorHint="@color/c_A3A3A2"
                android:textCursorDrawable="@drawable/cursor_login_et_color"
                android:textSize="16sp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/c_A3A3A2"
                />
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/parent_psd"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="208dp"
            >

            <EditText
                android:id="@+id/pass_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="登录密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/c_A3A3A2"
                android:textCursorDrawable="@drawable/cursor_login_et_color"
                android:textSize="16sp"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/c_A3A3A2"
                />
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/parent_psd1"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="258dp"
            >

            <EditText
                android:id="@+id/pass_et1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="重输密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/c_A3A3A2"
                android:textCursorDrawable="@drawable/cursor_login_et_color"
                android:textSize="16sp"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/c_A3A3A2"
                />
        </RelativeLayout>



        <TextView
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="370dp"
            android:background="@drawable/bg_guide_login_btn"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:paddingTop="10dp"
            android:text="确定"
            android:textColor="@color/black"
            android:textSize="14sp"
            />



    </FrameLayout>


</FrameLayout>
